<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortner</title>
    <style>
        body{
            font-style: "Segoe UI",Tahoma, Geneva, Vardana, Sans-serif;
        }
    </style>
</head>
<body>
    <h1>URL Shortner</h1>
    <% if(locals.id) { %>
        <p>URL Genereated : http://localhost:8001/url/<%= id %></p>
    <% } %>
    <div>
        <form method="post" action="/url">
            <div>
                <label>Enter your valid URL</label>
                <input type="text" name="url" placeholder="https://example.com" />
                <input type="submit" value="Generate"/>
            </div>
        </form>
    </div>
    <div style="margin-top: 30px">
        <% if (locals.urls) { %>
        <table>
          <thead>
            <th>S. No</th>
            <th>ShortID</th>
            <th>Redirect</th>
            <th>Clicks</th>
          </thead>
          <tbody>
            <% urls.forEach((url, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= url.shortID %></td>
              <td><%= url.redirectURL %></td>
              <td><%= url.visitHistory.length %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
        <% } %>
      </div>
</body>
</html>